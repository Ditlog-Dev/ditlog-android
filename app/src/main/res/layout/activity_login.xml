<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2e9de1">

    <ImageView
      android:id="@+id/logo_itb"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_marginTop="57dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:contentDescription="@string/logo_itb"
      app:srcCompat="@drawable/itb"
      tools:layout_editor_absoluteX="117dp"
      tools:layout_editor_absoluteY="0dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_itb"
        android:layout_centerHorizontal="true"
        android:text="@string/direktorat_logistik_itb"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="140dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="26dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/imageUsername"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="21dp"
          android:layout_marginLeft="21dp"
          android:layout_above="@id/imagePassword"
          android:layout_alignBottom="@+id/username"
          android:layout_alignRight="@id/imagePassword"
          android:contentDescription="@string/logo_username"
          android:tint="#2e9de1"
          app:srcCompat="@drawable/ic_account_circle_black_18dp" android:layout_alignEnd="@id/imagePassword"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_alignStart="@+id/password"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp"
            android:ems="10"
            android:hint="@string/username"
            android:singleLine="true"/>

        <ImageView
          android:id="@+id/imagePassword"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="21dp"
          android:layout_marginLeft="21dp"
          android:layout_alignBottom="@+id/password"
          android:contentDescription="@string/logo_password"
          android:tint="#2e9de1"
          app:srcCompat="@android:drawable/ic_lock_lock"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@id/imagePassword"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword" android:layout_toEndOf="@id/imagePassword"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="26dp"
            android:background="#2e9de1"
            android:text="@string/login"
            android:textAlignment="center"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/copyright_2018"
        android:textAlignment="center"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="476dp" />

</RelativeLayout>